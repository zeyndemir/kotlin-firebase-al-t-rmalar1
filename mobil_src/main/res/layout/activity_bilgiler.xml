<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#28A3AE"
    android:padding="15dp"
    tools:context="com.example.mobil.Bilgiler">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="384dp"
        android:layout_height="549dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:gravity="center"
            android:text="Bilgilerinizi Giriniz"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="350dp"
            android:layout_height="437dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="13dp"
            android:gravity="center"
            android:orientation="vertical">


            <EditText
                android:id="@+id/tvisim"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:ems="10"
                android:gravity="center"
                android:hint="İsim"
                android:inputType="textPersonName"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/tvsoyisim"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Soyisim"
                android:inputType="textPersonName"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="266dp"
                android:layout_height="106dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvdt"
                    android:layout_width="164dp"
                    android:layout_height="61dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Doğum Tarihi:"
                    android:inputType="textPersonName"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/btn_tarih"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:text="tarih" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="349dp"
                android:layout_height="106dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_sayfa"
                    android:layout_width="144dp"
                    android:layout_height="67dp"
                    android:backgroundTint="#E91E63"
                    android:text="Bilgileri Gör" />

                <Button
                    android:id="@+id/btn_image"
                    android:layout_width="144dp"
                    android:layout_height="67dp"
                    android:layout_marginStart="20sp"
                    android:backgroundTint="#673AB7"
                    android:text="Resim Yükle" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Bilgileri Girmeden Devam Et"
                android:textSize="18sp"
                android:textStyle="italic" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>